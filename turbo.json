{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**", 
        "!.next/cache/**", 
        "dist/**",
        "out/**",
        "!out/data/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "generate-assets": {
      "cache": false,
      "outputs": ["apps/web/public/data/**"]
    },
    "generate-assets:multi": {
      "cache": false,
      "outputs": ["apps/web/public/data/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
